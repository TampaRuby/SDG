<div class="ui inverted form contact-form">
  <h2 class="ui dividing inverted header">Get in touch with us.</h2>

  <%= form_tag contact_path, method: :post do %>
    <div class="field form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, '', class: 'form-control' %>
    </div>

    <div class="field form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, '', class: 'required form-control' %>
    </div>

    <div class="field form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, '', class: 'form-control', rows: 4 %>
    </div>

    <%= submit_tag 'Send Us A Message', class: 'ui button btn btn-block btn-success' %>
  <% end %>
</div>
